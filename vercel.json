{
  "version": 2,
  "builds": [
    { "src": "pages/api/**/*.js", "use": "@vercel/node" },
    { "src": "pages/**/*.html", "use": "@vercel/static" },
    { "src": "pages/**/*.css", "use": "@vercel/static" },
    { "src": "pages/**/*.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/pages/api/$1.js" },
    { "src": "^/(.*)$", "dest": "/pages/$1.html" }
  ]
}